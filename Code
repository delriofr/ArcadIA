      .from('users')
      .insert(users);

    if (userError) {
      console.error('Error seeding users:', userError);
    } else {
      console.log('‚úÖ Users seeded successfully');
    }
  }

  console.log('üéâ Database seeding completed!');
}

seed().catch(console.error);
`;

